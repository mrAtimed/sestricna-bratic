---
import { getCollection } from "astro:content";

import ArticleBlock from "../util/ArticleBlock.astro";

const data = await getCollection("services");



---

<section id="services">
  <div class="container">
    <h2>Services</h2>
    <div class="grid">

      {
        data.map((item)=>(
          <ArticleBlock
          title={item.data.title}
          sub={item.data.description}
          link={item.slug}
          img={item.data.image}
          >
          </ArticleBlock>
        ))
      }

    </div>
  </div>
</section>