---
import { Image } from "@astrojs/image/components";

import book from "../../img/400x250.png";
import browser from "../../img/400x250.png";
import download from "../../img/400x250.png";
import code from "../../img/400x250.png";

const data = [
	{ico: book, text: "happy clients", number: "3368"},
	{ico: browser, text: "projects completed", number: "937"},
	{ico: download, text: "filed downloaded", number: "438"},
	{ico: code, text: "lines of code", number: "5438"},
];
---

<section class="bg-something">
	<div class="container">
		<div class="grid col2">
			{
				data.map(({ico, text, number}) => (
					<div class="stats">
						<Image
						src={ico}
						alt=""
						height={100}
						width={100}
						quality={50}
						format="webp"
						loading="lazy"
						class="icons"
						/>
						<hgroup>
							<br />
							<h4>{number}</h4>
							<p>{text}</p>
						</hgroup>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	.stats {
		text-align: center;
		padding-block: 1rem;
	}
	@media (min-width: 768px) {
		.stats {
		}
	}

	.bg-something {
		padding-block: 4rem;
		background: url(../img/bg/some-facts-bg.png) center center no-repeat;
		background-size: cover;
		background-attachment: fixed;
	}
	.icons {
		--w : 3rem;
		height: var(--w);
		width: var(--w);
	}
</style>
