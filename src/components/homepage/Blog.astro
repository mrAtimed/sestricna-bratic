---
import { getCollection } from "astro:content";
import { Debug } from "astro/components";
import FormattedDate from "../../components/FormattedDate.astro";

const data = await getCollection("blog");
import img from "../../img/400x250.png";
---

<section>
  <div class="container">
    <h2>Blog</h2>
    <div class="grid">
      {
        data.map((post) => (
          <article class="blog">
            <img src={img} alt="" />
            <div class="blog-desc">
              <hgroup>
                <h4>
                  <a href={`/blog/${post.slug}/`}>
                    <b>{post.data.title}</b>
                  </a>
                </h4>
                <p>{post.data.pubDate}</p>
              </hgroup>
              <p>{post.data.description}</p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .grid {
    gap: 3rem;
  }
  .blog {
    padding: 0;
    border-radius: 0 0 1rem 1rem;
  }

  .blog-desc {
    padding: 1rem 2rem;
  }
</style>
